<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/container"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pl.slidechoose.MainActivity">

    <TextView
        android:id="@+id/select_result"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <com.pl.sweepselect.SweepSelect
        android:id="@+id/select_week"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundColor="@color/grey"
        app:corner="4dp"
        app:itemString="@array/multyChooseArray"
        app:multyChooseMode="true"
        app:normalColor="@color/white"
        app:normalSize="16sp"
        app:selectedColor="@color/yellow"
        app:selectedSize="20sp" />

    <TextView
        android:id="@+id/select_result2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="50dp" />

    <com.pl.sweepselect.SweepSelect
        android:id="@+id/select_week2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
         />

</LinearLayout>
